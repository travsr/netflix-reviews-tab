{
    "manifest_version" : 2,
    "name" : "Netflix Ratings Tab",
    "version" : "0.1.0",
    "description" : "Adds additional info to Netflix",
    "icons" : {
        "48" : "icons/border-48.png"
    },
    "background" : {
        "scripts" : ["background.bundle.js"]
    },
    "permissions" : [
        "*://*.imdb.com/*",  "*://*.rottentomatoes.com/*"
    ],
    "content_scripts" : [
        {
            "matches": ["*://*.netflix.com/*"],
            "js" : [
                "content.bundle.js"
            ],
            "css" : [
                "css/style.css"
            ]
        }
    ]
}